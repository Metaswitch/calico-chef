<% if @live_migrate
      @state_path = "/var/lib/nova_share"
   else
      @state_path = "/var/lib/nova"
   end
%>
[DEFAULT]
network_api_class = nova.network.neutronv2.api.API
firewall_driver = nova.virt.firewall.NoopFirewallDriver
security_group_api = neutron
auth_strategy = keystone
rpc_backend = rabbit
rabbit_host = <%= node[:fqdn] %>
rabbit_password = <%= @admin_password %>
my_ip = <%= node[:ipaddress] %>
vnc_enabled = True
vncserver_listen = <%= node[:ipaddress] %>
vncserver_proxyclient_address = <%= node[:ipaddress] %>
novncproxy_base_url = http://<%= node[:fqdn] %>:6080/vnc_auto.html
dhcpbridge_flagfile=/etc/nova/nova.conf
dhcpbridge=/usr/bin/nova-dhcpbridge
logdir=/var/log/nova
state_path=<%= @state_path %>
lock_path=/var/lock/nova
force_dhcp_release=True
iscsi_helper=tgtadm
libvirt_use_virtio_for_bridges=True
connection_type=libvirt
root_helper=sudo nova-rootwrap /etc/nova/rootwrap.conf
verbose=True
ec2_private_dns_show_ip=True
api_paste_config=/etc/nova/api-paste.ini
volumes_path=/var/lib/nova/volumes
enabled_apis=ec2,osapi_compute,metadata

[database]
connection = mysql://nova:<%= @admin_password %>@<%= node[:fqdn] %>/nova

[keystone_authtoken]
identity_uri = http://<%= node[:fqdn] %>:35357
auth_uri = http://<%= node[:fqdn] %>:5000/v2.0
#auth_host = <%= node[:fqdn] %>
#auth_port = 35357
#auth_protocol = http
admin_tenant_name = service
admin_user = nova
admin_password = <%= @admin_password %>

[glance]
host = <%= node[:fqdn] %>

[neutron]
url = http://<%= node[:fqdn] %>:9696
auth_strategy = keystone
admin_tenant_name = service
admin_username = neutron
admin_password = <%= @admin_password %>
admin_auth_url = http://<%= node[:fqdn] %>:35357/v2.0
service_metadata_proxy = true
metadata_proxy_shared_secret = <%= @admin_password %>
